! <-- Xft rules -->
Xft.dpi:			92
Xft.antialias:			true
Xft.hinting:			true
Xft.hintstyle:			hintfull
Xft.rgba:			rgb

URxvt.font:			xft:terminus:pixelsize=15
URxvt*scrollBar:		true
URxvt*scrollstyle:		plain
URxvt*scrollBar_right:		true
URxvt*transpscrollbar:		true
URxvt*scrollBar_floating:	true
urxvt*saveLines:		32767
urxvt*perl-lib:			/usr/lib/urxvt/perl/
urxvt*perl-ext-common:		default,matcher
urxvt*urlLauncher:		chromium
urxvt*matcher.button:		1
urxvt.colorUL:			#a9c9bc
urxvt*cursorColor:		orange
urxvt*cursorBlink:		true

! <-- URxvt rules -->
URxvt.perl-ext-common:		clipboard
URxvt.keysym.Mod4-c:perl:	clipboard:copy
URxvt.keysym.Mod4-v:perl:	clipboard:paste
urxvt*title:			rxvt-256color
urxvt*tintColor:		#aaaaaa
urxvt*fading:			10
urxvt*transparent:		false
urxvt*trasparent:		true
urxvt*pastableTabs:		true
urxvt*jumpScroll:		true
urxvt*secondaryScroll:		true
urxvt*urgentOnBell:		true

XTerm*faceName:terminus:	pixelsize=15
xterm*saveLines:		32767
xterm*borderLess:		true
xterm*urlLauncher:		chromium
xterm*tintColor:		red
xterm*cursorColor:		orange
xterm*cursorBlink:		true
xterm*shading:			20
xterm*fading:			10
xterm*pastableTabs:		true
xterm*jumpScroll:		true

alsamixer*scrollBar:		false

